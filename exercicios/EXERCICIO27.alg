algoritmo "EXERCICIO 27"
// Ler um valor e escrever se é positivo, negativo ou zero.
var
numero:real
inicio
escreva("introduza um número: ")

leia(numero)

se (numero=0)entao

escreva("o numero é: nulo")

senao

se (numero<0)entao

escreva("o numero é: negativo")

senao

se (numero>0)entao

escreva("o numero é: positivo")

fimse

fimse

fimse
fimalgoritmo
